{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom", "esnext.asynciterable"],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "esModuleInterop": false
    },
    "include": ["src/*", "src/**/*.ts"]
}
